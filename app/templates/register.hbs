<div class="container">
    <div class="col-lg-6 col-lg-offset-3">
        <div class="inner-form">
            <h1>Register</h1> 
            <form role="form">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Username</label>
                        <div class="form-group">
                            <input type="username" name="username" id="username" class="form-control" placeholder="">
                        </div>
                    </div>
                </div>  
                <div class="row">
                    <div class="col-lg-12">
                        <label>Email</label>
                        <div class="form-group">
                            <input type="email" name="email" id="email" class="form-control" placeholder="">
                        </div>
                    </div>
                </div> 
                <div class="row">
                    <div class="col-lg-12">
                        <label>Password</label>
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control" placeholder="">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label>Confirm Password</label>
                        <div class="form-group">
                            <input type="confirm_password" name="confirm_password" id="confirm_password" class="form-control" placeholder="">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-default">
                            <span>REGISTER</span>
                        </button>
                        {{#link-to "login"}}
                            <button type="LOGIN" class="btn btn-default">
                                <span>LOGIN</span>
                            </button>
                        {{/link-to}}
                    </div>
                </div>
            </form>
        </div>
    </div>   
</div> 
